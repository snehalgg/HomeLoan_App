<?xml version="1.0" encoding="utf-8"?>

<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        android:background="@drawable/custom_edittext">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:padding="24dp">

        <EditText

            android:id="@+id/loanAmountEditText"

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:hint="Loan Amount"

            android:layout_marginTop="20dp"

            android:layout_centerHorizontal="true"

            />



        <EditText

            android:id="@+id/interestRateEditText"

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:hint="Interest Rate (%)"

            android:layout_below="@id/loanAmountEditText"

            android:layout_marginTop="10dp"

            android:layout_centerHorizontal="true"

            />



        <EditText

            android:id="@+id/loanTenureEditText"

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:hint="Loan Tenure (months)"

            android:layout_below="@id/interestRateEditText"

            android:layout_marginTop="10dp"

            android:layout_centerHorizontal="true"

            />


        <Button

            android:id="@+id/calculateButton"

            android:layout_width="300dp"
            android:backgroundTint="#2C3E50"
            android:layout_height="wrap_content"
            android:textColor="#ECF0F1"
            android:layout_below="@id/loanTenureEditText"

            android:layout_centerHorizontal="true"

            android:layout_marginTop="20dp"

            android:text="Calculate EMI"

            />



        <TextView

            android:id="@+id/emiResultTextView"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:text=""

            android:layout_below="@id/calculateButton"

            android:layout_marginTop="20dp"

            android:layout_centerHorizontal="true"

            />
    </LinearLayout>

    </androidx.cardview.widget.CardView>
<TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:padding="8dp"
android:text="Contact us on 0048948499494"
android:textSize="14sp"
android:textAlignment="center"
android:id="@+id/signupText"
android:textColor="@color/black"
android:layout_marginBottom="20dp"/>
  </LinearLayout>